{% extends "block--block-content.html.twig" %}

{% block content %}
  <div{{ content_attributes.addClass('highlight') }}>
    <div class="highlight__media">
      {{ content.field_highlight_media }}
    </div>
    <div class="highlight__content">
      {{ content.field_highlight_title }}
      {{ content.field_highlight_blurb }}
      {{ content.field_highlight_button }}
    </div>
  </div>
{% endblock %}

